@model Library.Models.RegisterViewModel

<link href="~/Content/body.css" rel="stylesheet" />

<div class="container body-content">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.Partial("_BooksMainPanelPartial")
        <br /><br /><br /><br /><br />
        <h4>Create a new account.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control ui-tooltip", @title = "Your Name" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.SecondName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.SecondName, new { @class = "form-control ui-tooltip", @title = "Your Second Name" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control ui-tooltip", @title = "The email must have '@' for exeample: joe.doe@gmail.com" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control ui-tooltip", @title = "The Password must be at least 6 characters long.\nPasswords must have at least one non letter or digit character.\nPasswords must have at least one digit ('0'-'9').\nPasswords must have at least one uppercase ('A'-'Z')." })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control ui-tooltip", @title = "The confirm password must be the same as password.\nThe Password must be at least 6 characters long.\nPasswords must have at least one non letter or digit character.\nPasswords must have at least one digit ('0'-'9').\nPasswords must have at least one uppercase ('A'-'Z')." })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-success" value="Register" />
            </div>
        </div>
    }
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
