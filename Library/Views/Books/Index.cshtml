@model IEnumerable<OperationsOnData.Models.Book>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/body.css" rel="stylesheet" />

    @Html.Partial("_BooksMainPanelPartial")
    <br /><br /><br /><br /><br />
    <div style="width:90%; margin:0 auto;" class="tablecontainer" >
        <table id="myTable" style="background-color:blueviolet;" class="table table-bordered table-responsive table-striped wow bounceInLeft" data-wow-delay="0.2s">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Type</th>
                    <th>Pages</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script>
        function RenderHTMLActionButtons(id)
        {
            return `<form action="@Html.Raw(HttpUtility.UrlDecode(Url.Action("Reservation", "Books", new { id = "{{id}}" })))" method="post">
                        <input type="submit" value="Reserve" onclick="return confirm('Are you sure?')" class="btn btn-success">
                    </form>`
                    .replace(/{{id}}/g, id);
        }

        $(document).ready(function () {
            var oTable = $('#myTable').DataTable({
                "ajax": {
                    "url": '/books/GetBooks',
                    "type": "get",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "Title", "autoWidth": true },
                    { "data": "Author", "autoWidth": true },
                    { "data": "Type", "autoWidth": true },
                    { "data": "NumberOfPages", "autoWidth": true },
                    { "data": "Status", "autoWidth": true },
                    {
                        "title": '',
                        "data": null,
                        "render": function (data, type, row) {

                            return RenderHTMLActionButtons(data['BookId']);
                        }
                    }
                ]

            })
            $('.tablecontainer').on('click', 'a.popup', function (e) {
                e.preventDefault();
                OpenPopup($(this).attr('href'));
            })
            function OpenPopup(pageUrl) {
                var $pageContent = $('<div/>');
                $pageContent.load(pageUrl, function () {
                    $('#popupForm', $pageContent).removeData('validator');
                    $('#popupForm', $pageContent).removeData('unobtrusiveValidation');
                    $.validator.unobtrusive.parse('form');

                });

                $dialog = $('<div class="popupWindow" style="overflow:auto"></div>')
                    .html($pageContent)
                    .dialog({
                        draggable: false,
                        autoOpen: false,
                        resizable: false,
                        model: true,
                        title: 'Popup Dialog',
                        height: 550,
                        width: 600,
                        close: function () {
                            $dialog.dialog('destroy').remove();
                        }
                    })

                $('.popupWindow').on('submit', '#popupForm', function (e) {
                    var url = $('#popupForm')[0].action;
                    $.ajax({
                        type: "POST",
                        url: url,
                        data: $('#popupForm').serialize(),
                        success: function (data) {
                            if (data.status) {
                                $dialog.dialog('close');
                                oTable.ajax.reload();
                            }
                        }
                    })

                    e.preventDefault();
                })
                $dialog.dialog('open');
            }
        })
    </script>










