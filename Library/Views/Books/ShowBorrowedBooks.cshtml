@model IEnumerable<Library.ViewModels.BorrowedBookViewModel>

@{
    ViewBag.Title = "ShowBorrowedBooks";
}

<link href="~/Content/body.css" rel="stylesheet" />

@Html.Partial("_BooksMainPanelPartial")
<br /><br /><br /><br /><br />

<div class="container body-content">
    <div class="panel panel-default">
        <div class="panel-heading">
            <span>
                <h3>Your borrowed books</h3>
            </span>
        </div>
        <div class="panel-body">
            <table class="table table-bordered table-responsive table-striped">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Author)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BorrowingDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ReturnDate)
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    if (item.ReturnDate >= DateTime.Now)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Author)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BorrowingDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReturnDate)
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr style="color:red;">
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Author)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BorrowingDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReturnDate)
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>
