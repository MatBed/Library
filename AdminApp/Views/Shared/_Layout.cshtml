<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/jquery.dataTables.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />

</head>

<body class="sidebar-mini fixed">
    <div class="wrapper">
        <!-- Navbar-->
        <header class="main-header hidden-print">
            <p class="logo">Admin</p>
            <nav class="navbar navbar-static-top"></nav>
        </header>
        <!-- Side-Nav-->
        <aside class="main-sidebar hidden-print">
            <section class="sidebar">
                <!-- Sidebar Menu-->
                <ul>
                    <li style="display:table-row;">@Html.ActionLink("Home Page", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li style="display:table-row;">@Html.ActionLink("Books", "Index", "AdminBooks", new { area = "" }, new { @class = "navbar-brand" })</li>
                </ul>
            </section>
        </aside>
        <div class="content-wrapper">
            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Mateusz Bedła</p>
                </footer>
            </div>
        </div>
    </div>
    <!-- Javascripts-->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>






